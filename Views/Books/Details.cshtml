@model TheLibrary.Models.Book

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body{
            color:white;
        }
        h1 {
            color: white;
        }

        .this {
            background-color: rgba(0,0,0, 0.8) !important;
            width:60%;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .custom-btn {
            background-color: transparent;
            border: 1px solid white;
            color: white;
        }

        .custom-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body>
    <div class="container p-4 this">
        <h1 style="color: white">Details</h1>
        <h4 style="color: grey">Book</h4>
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BookTitle)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.BookTitle)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PublicationDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PublicationDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IsAvailable)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Author.AuthorName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Catalog)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Catalog.CatalogName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Genre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Genre.Genre1)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Publisher)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Publisher.PublisherName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Shelf)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Shelf.ShelfNumber)
                </dd>
            </dl>
        </div>
        <div class="row">
            <div class="col-sm-10">
                <a asp-action="Index" class="btn custom-btn">>Back</a>
            </div>
            <div class="col-sm-2">
                <a asp-action="Edit" asp-route-id="@Model?.BookId" class="btn btn-outline-warning">Edit</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
