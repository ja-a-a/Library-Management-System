@model TheLibrary.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container p-4" style="color: white; background-color: rgba(0, 0, 0, 0.8); width: 60%;">
    <h1 style="color: white">Delete</h1>
    <h4 style="color: grey">Book</h4>
    <hr />
    <h3 style="color: red">Are you sure you want to delete this book?</h3>
    <div class="row">
        <div>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.BookTitle)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.BookTitle)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PublicationDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PublicationDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IsAvailable)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Author.AuthorName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Catalog)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Catalog.CatalogName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Genre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Genre.Genre1)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Publisher)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Publisher.PublisherName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Shelf)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Shelf.ShelfNumber)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="BookId" />
                <div class="form-group">
                    <a asp-action="Index" class="btn custom-btn" style="margin-right:66%;">Cancel</a>
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .custom-btn {
        background-color: transparent;
        border: 1px solid white;
        color: white;
    }

        .custom-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
</style>
