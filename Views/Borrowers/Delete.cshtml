@model TheLibrary.Models.Borrower

@{
    ViewData["Title"] = "Delete";
}

<div class="container p-4" style="color: white; background-color: rgba(0, 0, 0, 0.8); width: 60%;">
    <h1 style="color: white">Delete</h1>
    <h4 style="color: grey">Borrower</h4>
    <hr />
    <h3 style="color:red">Are you sure you want to delete this?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.BorrowerId)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.BorrowerId)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.BorrowerFullname)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.BorrowerFullname)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.BorrowerType)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.BorrowerType)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="BorrowerId" />
            <div class="form-group">
                <a asp-action="Index" class="btn custom-btn" style="margin-right:66%;">Cancel</a>
                <input type="submit" value="Delete" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>
<style>
    .custom-btn {
        background-color: transparent;
        border: 1px solid white;
        color: white;
    }

        .custom-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
</style>
