@model TheLibrary.Models.Borrower

@{
    ViewData["Title"] = "Details";
}

<div class="container p-4" style="color: white; background-color: rgba(0,0,0, 0.8); width: 60%;">
    <h1 style="color: white;">Details</h1>
    <h4 style="color: darkgrey;">Borrower</h4>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.BorrowerId)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.BorrowerId)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.BorrowerFullname)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.BorrowerFullname)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.BorrowerType)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.BorrowerType)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <a asp-action="Index" class="btn custom-btn">Back</a>
        </div>
        <div class="col-sm-2">
            <a asp-action="Edit" asp-route-id="@Model?.BorrowerId" class="btn btn-outline-warning">Edit</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        color: white;
    }

    h1 {
        color: white;
    }

    .this {
        background-color: rgba(0, 0, 0, 0.8) !important;
        width: 60%;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .custom-btn {
        background-color: transparent;
        border: 1px solid white;
        color: white;
    }

        .custom-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
</style>
